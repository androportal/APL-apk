package android.scilab.choose.language;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.RadioGroup;

public class ChooselanguageActivity extends Activity {
    /** Called when the activity is first created. */
    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.main);
    }
    public void radioclickhandler(View v){
   
	
	RadioGroup radioGroup = (RadioGroup) findViewById(R.id.r_grp);
	 
	 
	int checkedRadioButton = radioGroup.getCheckedRadioButtonId();
	 
	String radioButtonSelected = "";
	
      
    	switch (checkedRadioButton) {
    	  case R.id.r_c : radioButtonSelected = "radiobutton1";
    	                   	              break;
    	  case R.id.r_cplus: radioButtonSelected = "radiobutton2";
    			                      break;
    	  case R.id.r_python: radioButtonSelected = "radiobutton3";
    			                      break;
    	  case R.id.r_scilab: radioButtonSelected = "radiobutton4";
          break;
    	  case R.id.r_java: radioButtonSelected = "radiobutton3";
          break;
    }
    }
    
    
}